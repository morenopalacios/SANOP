<br><br><br><br><br>
<h1>Listado incidentes</h1>
	<%= form_tag incidentes_path, :method => 'get' do %>
	<% content_tag :label do %>
	Fecha del reporte:
	<%= text_field_tag :search, params[:search] %>
	<%= submit_tag "Buscar", :name => nil %>
	<% end %>
	<% end %>

<table class="table">
  <thead>
    <tr>
       <th>Funcionario</th>
      <th>Area o proceso</th>
      <th>Lugar de ocurrencia</th>
      <th>Fecha del reporte</th>
      <th>Hora del reporte</th>
      <th>Personalinvolucrado</th>
      <th>Otro</th>
      <th>Especifique</th>
      <th>Nombre completo1</th>
      <th>Email1</th>
      <th>Telefono1</th>
      <th>Nombre completo2</th>
      <th>Email2</th>
      <th>Telefono2</th>
      
      
      <th colspan="3">Opciones</th>
    </tr>
  </thead>

  <tbody>
     <%= render @incidentes %>
  </tbody>
</table>

<br>
 
<%= button_to 'Nueva Incidente', new_incidente_path, remote: true, :method=>"get", class: "btn btn-primary btn-xs" %> 

<%= will_paginate @incidentes, :previous_label => '&laquo; Anterior', :next_label => 'Siguiente &raquo;' %>
<br>
Incidentes: <%= @incidentes.count %>
 

